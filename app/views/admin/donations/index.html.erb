<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 pb-0">
          <h2 class="h4 text-center fw-bold text-primary mb-4">
            <i class="bi bi-cash-stack me-2"></i> Historial de Donaciones
          </h2>
        </div>
        
        <div class="card-body px-0 pt-0">
          <% if @donations.any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th class="ps-4">ID de Pago</th>
                    <th class="text-end">Monto</th>
                    <th class="text-end pe-4">Fecha</th>
                  </tr>
                </thead>
                <tbody>
                  <% @donations.each do |donation| %>
                    <tr>
                      <td class="ps-4 fw-semibold text-nowrap">
                        <span class="badge bg-light text-dark font-monospace">
                          <%= donation.payment_id %>
                        </span>
                      </td>
                      <td class="text-end fw-bold text-success">
                        $<%= number_with_delimiter(donation.amount, delimiter: '.') %>
                      </td>
                      <td class="text-end pe-4 text-muted">
                        <%= donation.created_at.strftime("%d/%m/%Y %H:%M") %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <div class="mb-3">
                <i class="bi bi-piggy-bank fs-1 text-muted"></i>
              </div>
              <h5 class="fw-bold text-muted">No hay donaciones registradas</h5>
              <p class="text-muted">Todav√≠a no se han realizado donaciones.</p>
            </div>
          <% end %>
        </div>
        
        <% if @donations.any? %>
          <div class="card-footer bg-white border-0 pt-0">
            <div class="d-flex justify-content-between align-items-center px-4">
              <small class="text-muted">
                Mostrando <%= @donations.count %> donaciones
              </small>
              <small class="text-muted">
                Actualizado: <%= Time.now.strftime("%d/%m/%Y %H:%M") %>
              </small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>