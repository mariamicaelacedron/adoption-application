<div class="container mt-4">
  <div class="row">
<div class="col-md-6">
  <% if @pet.image.attached? %>
    <%= image_tag url_for(@pet.image.variant(resize_to_limit: [600, 600])), class: "img-fluid rounded shadow" %>
  <% else %>
    <div class="bg-light p-5 text-center rounded shadow">
      <i class="fas fa-paw fa-5x text-secondary mb-3"></i>
      <p class="text-muted">No hay imagen disponible</p>
    </div>
  <% end %>
</div>
    
    <div class="col-md-6">
      <h1><%= @pet.name %></h1>
      <p class="text-muted"><%= @pet.pet_type&.titleize || 'No especificado' %> - <%= @pet.breed %></p>
      
      <div class="card mt-3">
        <div class="card-body">
          <p><strong>Edad:</strong> <%= @pet.age %> años</p>
          <p><strong>Estado:</strong> 
            <span class="badge bg-<%= pet_status_badge(@pet.status) %>">
              <%= @pet.status.present? ? @pet.status.titleize : 'Pendiente' %>
            </span>
          </p>
          
          <% if @pet.description.present? %>
            <p><strong>Descripción:</strong></p>
            <p class="text-muted"><%= @pet.description %></p>
          <% end %>
        </div>
      </div>
      
      <div class="mt-3 d-flex gap-2">
        <%= link_to 'Volver', admin_pets_path, class: 'btn btn-outline-secondary' %>
        <%= link_to 'Editar', edit_admin_pet_path(@pet), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>