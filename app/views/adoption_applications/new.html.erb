<h2>Solicitud de adopción para <%= @pet.name %></h2>

<%= form_with(model: [@pet, @application], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :application_text, "Por qué quieres adoptar a #{@pet.name}?", class: "form-label" %>
    <%= form.text_area :application_text, class: "form-control", rows: 5, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar solicitud", class: "btn btn-primary" %>
    <%= link_to "Cancelar", @pet, class: "btn btn-secondary" %>
  </div>
<% end %>