<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-lg border-0 rounded-lg mt-4">
      <div class="card-header bg-success text-white text-center py-3">
        <h2 class="mb-0">Iniciar sesión</h2>
      </div>
      <div class="card-body p-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email@ejemplo.com", id: "floatingEmail" %>
            <%= f.label :email, "Correo electrónico", for: "floatingEmail" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Contraseña", id: "floatingPassword" %>
            <%= f.label :password, "Contraseña", for: "floatingPassword" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Iniciar sesión", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center py-3">
        <div class="small">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
