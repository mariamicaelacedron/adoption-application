<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">Mis Donaciones</h1>
      
      <%= link_to 'Nueva Donación', new_donation_path, class: 'btn btn-success mb-4' %>
      
      <% if @donations.any? %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Fecha</th>
                <th>Monto</th>
                <th>ID de Pago</th>
              </tr>
            </thead>
            <tbody>
              <% @donations.each do |donation| %>
                <tr>
                  <td><%= donation.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                  <td>$<%= number_with_delimiter(donation.amount, delimiter: '.') %></td>
                  <td><%= donation.payment_id %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info">
          Aún no has realizado donaciones.
        </div>
      <% end %>
    </div>
  </div>
</div>