<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-center mb-4">Realizar Donación</h2>
          
          <%= form_with url: mercado_pago_create_payment_path, method: :post, class: "mt-3" do |f| %>
            <div class="mb-4">
              <label class="form-label fw-bold">Monto en Pesos Argentinos (ARS)</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <%= f.number_field :amount, 
                    class: "form-control form-control-lg py-3", 
                    min: 100, 
                    value: 500, 
                    required: true,
                    step: "100" %>
              </div>
              <div class="form-text text-end">Monto mínimo: $100</div>
            </div>

            <div class="d-grid">
              <%= f.submit "Donar con Mercado Pago", 
                  class: "btn btn-success btn-lg py-3 fw-bold" %>
            </div>
          <% end %>

          <div class="mt-4 pt-3 border-top text-center">
