<% if page.current? %>
  <li class="page-item active">
    <span class="page-link">
      <%= page %>
      <span class="visually-hidden">(actual)</span>
    </span>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link' %>
  </li>
<% end %> 