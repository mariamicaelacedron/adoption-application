<div class="card h-100 shadow-sm">
  <div class="pet-image-container" style="height: 200px; overflow: hidden; position: relative;">
    <%= image_tag default_pet_image_url(:dog), class: "card-img-top h-100 w-100", style: "object-fit: cover;" %>
    
    <% if pet.status != "available" %>
      <span class="position-absolute top-0 start-0 badge bg-danger m-2">
        <%= pet.status == "pending_adoption" ? "En proceso" : "Adoptado" %>
      </span>
    <% end %>
  </div>

  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= pet.name %></h5>
    <div class="card-text mb-3">
      <p class="mb-1"><strong>Raza:</strong> <%= pet.breed %></p>
      <p class="mb-1"><strong>Edad:</strong> <%= pet.age %> a√±os</p>
      <% if pet.description.present? %>
        <p class="text-muted mt-2"><small><%= truncate(pet.description, length: 80) %></small></p>
      <% end %>
    </div>

    <div class="mt-auto d-flex justify-content-between align-items-center">
      <%= link_to 'Ver detalles', pet, class: 'btn btn-outline-primary btn-sm' %>
      
    </div>
  </div>
</div>