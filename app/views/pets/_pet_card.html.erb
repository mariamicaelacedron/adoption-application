<div class="card h-100 shadow-sm">
  <% if pet.image.attached? %>
    <%= image_tag pet.image.variant(resize_to_limit: [400, 400]), class: "card-img-top", style: "height: 250px; object-fit: cover;" %>
  <% else %>
    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
      <i class="fas fa-paw fa-5x text-secondary"></i>
    </div>
  <% end %>

  <div class="card-body">
    <h5 class="card-title"><%= pet.name %></h5>
    <p class="card-text"><strong>Tipo:</strong> <%= pet.pet_type.titleize %></p>
    <p class="card-text"><strong>Raza:</strong> <%= pet.breed %></p>
    <p class="card-text"><strong>Edad:</strong> <%= pet.age %> años</p>
    
    <%= link_to 'Ver detalles', pet, class: 'btn btn-outline-primary' %>
    
    <% if current_user && !current_user.admin? %>
      <%= link_to 'Solicitar Adopción', new_pet_adoption_application_path(pet), class: 'btn btn-success mt-2' %>
    <% end %>
  </div>
</div>