<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <% if @pet.image.attached? %>
        <%= image_tag @pet.image.variant(resize_to_limit: [600, 600]), class: "img-fluid rounded shadow" %>
      <% else %>
        <div class="bg-light p-5 text-center rounded shadow">
          <i class="fas fa-paw fa-5x text-secondary mb-3"></i>
          <p class="text-muted">No hay imagen disponible</p>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-6">
      <h1><%= @pet.name %></h1>
      <p class="text-muted"><%= @pet.pet_type.titleize %> - <%= @pet.breed %></p>
      
      <div class="card mt-3">
        <div class="card-body">
          <p><strong>Edad:</strong> <%= @pet.age %> a침os</p>
<p><strong>Estado:</strong>
  <% badge_class, status_text = pet_status_badge(@pet) %>
  <span class="badge bg-<%= badge_class %>">
    <%= status_text %>
  </span>
</p>          
          <% if @pet.description.present? %>
            <p><strong>Descripci칩n:</strong></p>
            <p class="text-muted"><%= @pet.description %></p>
          <% end %>
        </div>
      </div>
      
      <div class="mt-3 d-flex gap-2">
        <%= link_to 'Volver', pets_path, class: 'btn btn-outline-secondary' %>
        <% if current_user&.admin? %>
          <%= link_to 'Editar', edit_admin_pet_path(@pet), class: 'btn btn-primary' %>
        <% end %>
        
        <% if current_user && !current_user.admin? %>
          <% if @pet.adoptions.where(user_id: current_user.id, status: 'pending').exists? %>
            <span class="btn btn-warning disabled">Solicitud pendiente</span>
          <% elsif @pet.adoptions.where(user_id: current_user.id, status: 'approved').exists? %>
            <span class="btn btn-success disabled">Adopci칩n aprobada</span>
          <% elsif @pet.adoptions.where(user_id: current_user.id, status: 'rejected').exists? %>
            <span class="btn btn-danger disabled">Solicitud rechazada</span>
          <% else %>
            <%= link_to 'Solicitar Adopci칩n', new_pet_adoption_path(@pet), class: 'btn btn-success' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>